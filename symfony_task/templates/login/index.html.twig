{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    
    <form action="{{ path('login') }}" method="post" class="mx-auto flex flex-col gap-3 max-w-md bg-white p-6 border border-slate-100 rounded-md shadow-sm">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="flex flex-col gap-2">
            <label class="text-sm font-bold" for="username">Login:</label>
            <input class="rounded-md focus:ring-indigo-500" type="text" id="username" name="_username" value=""/>
        </div>

        <div class="flex flex-col gap-2">
            <label class="text-sm font-bold" for="password">Hasło:</label>
            <input class="rounded-md focus:ring-indigo-500" type="password" id="password" name="_password"/>
        </div>
        <button class="rounded-md bg-indigo-500 hover:bg-indigo-600 text-white font-bold text-sm px-3 py-2 w-fit" type="submit">Zaloguj się</button>
        {% if error %}
        <div class="text-sm font-bold text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>

    

{% endblock %}
